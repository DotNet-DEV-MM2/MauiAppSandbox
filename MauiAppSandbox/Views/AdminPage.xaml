<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase x:Class="MauiAppSandbox.Views.AdminPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModelBase="clr-namespace:MauiAppSandbox.ViewModels.Base"
             xmlns:viewmodels="clr-namespace:MauiAppSandbox.ViewModels"
             xmlns:views="clr-namespace:MauiAppSandbox.Views"
             x:Name="AddClosetItemPageName"
             Title="AdminPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Admin Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Reseed Category Table"
                Command="{Binding ReseedCategoriesCommand}"/>

        <Button Text="Reseed Closet Item Table"
                Command="{Binding ReseedClosetItemsCommand}"/>
    </VerticalStackLayout>
</views:ContentPageBase>