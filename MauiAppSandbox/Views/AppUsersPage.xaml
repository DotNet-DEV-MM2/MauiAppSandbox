<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSandbox.Views.AppUsersPage"
             xmlns:models="clr-namespace:MauiAppSandbox.Models"
             xmlns:viewModelBase="clr-namespace:MauiAppSandbox.ViewModels.Base"
             xmlns:viewmodels="clr-namespace:MauiAppSandbox.ViewModels"
             xmlns:views="clr-namespace:MauiAppSandbox.Views"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             x:DataType="viewmodels:AppUsersViewModel"
             Title="AppUsers">
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">
        <RefreshView
            Grid.ColumnSpan="2"
            Command="{Binding GetAppUsersCommand}"
            IsRefreshing="{Binding IsRefreshing}">

            <CollectionView
                ItemsSource="{Binding AppUsers}"
                SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="100">
                        <Image
                            HorizontalOptions="CenterAndExpand"
                            Source="nodata.png"
                            VerticalOptions="CenterAndExpand" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <!--   <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="3"/>
                </CollectionView.ItemsLayout>-->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:AppUser">
                        <Grid Padding="10">
                            <Frame HeightRequest="125" Style="{StaticResource CardView}">
                                <Grid Padding="0" ColumnDefinitions="125,*">
                                    <!--<Image
                                        Aspect="AspectFill"
                                        HeightRequest="125"
                                        Source="{Binding PictureUri}"
                                        WidthRequest="125" />-->
                                    <VerticalStackLayout
                                        Grid.Column="1"
                                        Padding="10">
                                        <Label Style="{StaticResource LargeLabel}" Text="{Binding UserName}" />
                                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Email}" />
                                        <Label Style="{StaticResource MediumLabel}" Text="{Binding EmailConfirmed}" />
                                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Role}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="8"
            Command="{Binding GetAppUsersCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Refresh AppUsers" />

        <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand" />
    </Grid>

</views:ContentPageBase>