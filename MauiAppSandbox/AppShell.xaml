<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppSandbox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppSandbox.Views">
      
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="ClosetItems">
            <ShellContent Title="All"
                          ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Season"
                          ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Type"
                          ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Size"
                          ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Favs"
                          ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <ShellContent Title="Category Admin"
                      Icon="graph.svg"
                      ContentTemplate="{DataTemplate views:CategoriesPage}" />
        <ShellContent Title="User Settings"
                      Icon="setting.svg"
                      ContentTemplate="{DataTemplate views:CategoriesPage}" />
        <ShellContent Title="Reseed Tables"
                      Icon="autumn.png"
                      ContentTemplate="{DataTemplate views:AdminPage}" />
    </FlyoutItem>

    <ShellContent Title="Logout"
                  Icon="logout.png"
                  ContentTemplate="{DataTemplate views:CategoriesPage}" />

</Shell>

